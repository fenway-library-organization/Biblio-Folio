#!/usr/bin/perl

$| = 1;

use strict;
use warnings;

use FindBin qw($Bin);
use lib "$Bin/../lib";

use Biblio::Folio::App;

(my $prog = $0) =~ s{.*/}{};
my $progfile = File::Spec->rel2abs($0);

my $app = Biblio::Folio::App->new(
    'program' => $prog,
    'program_file' => $progfile,
    'argv' => [@ARGV],
    'root' => $ENV{'FOLIO_ROOT'} || '/usr/local/folio',
    'site_name' => $ENV{'FOLIO_SITE'},
);
$app->run;

# vim:set et ts=4 sw=4 cin si ai:
